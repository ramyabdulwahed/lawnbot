<?xml version="1.0"?>

<robot name="my_robot">



    <link name="world"/>


  

    <link name="base_link">
        
        <visual>
            <geometry>
                <box size= "0.4 0.3 0.2"/>
            </geometry>

            <material name="black">
                <color rgba="0 0 0 1"/>
            </material>

            <origin xyz="0 0 0.1" rpy="0 0 0"/>
        </visual>

        <collision>
            <geometry>
                <box size= "0.4 0.3 0.2"/>
            </geometry>
        </collision>

        <inertial>
            <mass value="5.0"/>
            <inertia ixx="0.1" ixy="0.0" ixz="0.0"
               iyy="0.1" iyz="0.0"
               izz="0.1"/>
        </inertial>
    
    </link>

    <joint name="base_joint" type="fixed">
        <parent link="world"/>
        <child link="base_link"/>
        <!-- <origin xyz="1.5 1 0.15" rpy="0 0 0"/> -->
<origin xyz="1.5 1 0" rpy="0 0 0"/>

    </joint>






    <link name="left_track">

        <visual>

            <geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>

            <origin xyz="0 0 0" rpy="1.5708 0 0"/>

            <material name="grey">
                <color rgba="0.5 0.5 0.5 1"/>
            </material>
        </visual>

        <collision>
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>
            
            <origin xyz="0 0.15 0" rpy="1.5708 0 0"/>

             <surface>
                <friction>
                <ode>
                    <mu>1.0</mu>
                    <mu2>1.0</mu2>
                </ode>
                </friction>
                <contact>
                <ode/>
                </contact>
            </surface>
        </collision>

        <inertial>
         <mass value="1.0"/>
          <inertia ixx="0.001" ixy="0.0" ixz="0.0"
               iyy="0.001" iyz="0.0"
               izz="0.001"/>

        </inertial>

    </link>

    <joint name="left_track_joint" type="continuous">
    
        <parent link ="base_link"/>
        <child link="left_track"/>
        <origin xyz="0 0.170 -0.05" rpy="0 0 0"/>
        <!-- <origin xyz="0 0.170 0" rpy="0 0 0"/> -->

        <axis xyz="0 1 0"/>
        <dynamics damping="1.0" friction="0.0"/>

<!--here-->

  <ros2_control>
    <command_interface name="velocity"/>
    <state_interface name="velocity"/>
  </ros2_control>
    </joint>





    <link name="right_track">

        <visual>

            <geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>

            <origin xyz="0 0 0" rpy="1.5708 0 0"/>
        <!--here-->
            <material name="grey">
                <color rgba="0.5 0.5 0.5 1"/>
            </material>
        </visual>

        <collision>
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>
            
            <origin xyz="0 0 0" rpy="1.5708 0 0"/>

             <surface>
                <friction>
                <ode>
                    <mu>1.0</mu>
                    <mu2>1.0</mu2>
                </ode>
                </friction>
                <contact>
                <ode/>
                </contact>
            </surface>
            
        </collision>

        <inertial>
         <mass value="1.0"/>
          <inertia ixx="0.001" ixy="0.0" ixz="0.0"
               iyy="0.001" iyz="0.0"
               izz="0.001"/>

        </inertial>

    </link>

    <joint name="right_track_joint" type="continuous">
    
        <parent link="base_link"/>
        <child link="right_track"/>
        <origin xyz="0 -0.170 -0.05" rpy="0 0 0"/>
        <!-- <origin xyz="0 -0.170 0" rpy="0 0 0"/> -->

        <axis xyz="0 1 0"/>
        <dynamics damping="1.0" friction="0.0"/>


  <ros2_control>
    <command_interface name="velocity"/>
    <state_interface name="velocity"/>
  </ros2_control>

    </joint>




    <link name="lidar_link">

        <visual>
        <geometry>
            
            <cylinder radius="0.04" length="0.02"/>
        </geometry>
        
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <material name="blue">
            <color rgba="0.2 0.2 0.8 1.0"/>
        </material>
        </visual>

        <collision>
        <geometry>
            <cylinder radius="0.04" length="0.02"/>
        </geometry>
        <origin xyz="0 0 0" rpy="1.5708 0 0"/>
        </collision>

        <inertial>
  
        <mass value="0.1"/>
        <inertia ixx="0.0001" ixy="0.0" ixz="0.0"
                iyy="0.0001" iyz="0.0"
                izz="0.0001"/>
        </inertial>

<gazebo>
  <plugin name="gazebo_ros_laser_controller" filename="libgazebo_ros_ray_sensor.so">
    <ros>
      <namespace>/</namespace>
    </ros>
    <always_on>true</always_on>
    <update_rate>20.0</update_rate>
    <ray> 
      <scan>
        <horizontal>
          <samples>720</samples>        
          <resolution>1.0</resolution>
          <min_angle>-1.5708</min_angle> 
          <max_angle>1.5708</max_angle>  
        </horizontal>
      </scan>
      <range> 
        <min>0.1</min>
        <max>10.0</max>
        <resolution>0.01</resolution>
      </range>
      <noise>
        <type>gaussian</type>
        <mean>0.0</mean>
        <stddev>0.01</stddev>
      </noise>
    </ray>
    <topicName>scan</topicName> 
    <frameName>lidar_link</frameName> 
  </plugin>
</gazebo>


    </link>

    <joint name="lidar_joint" type="fixed">
        <parent link="base_link"/>
        <child link="lidar_link"/>
        <origin xyz="0.2 0 0.11" rpy="0 0 0"/> 
 
    </joint>    


    <ros2_control name="GazeboSystem" type="system">
  <hardware>
    <plugin>gazebo_ros2_control/GazeboSystem</plugin>
  </hardware>

  <joint name="left_track_joint">
    <command_interface name="velocity"/>
    <state_interface name="velocity"/>
  </joint>

  <joint name="right_track_joint">
    <command_interface name="velocity"/>
    <state_interface name="velocity"/>
  </joint>
</ros2_control>



<gazebo reference="base_link">
  <material>Gazebo/Black</material>
</gazebo>

<gazebo reference="left_track">
  <material>Gazebo/Grey</material>
</gazebo>

<gazebo reference="right_track">
  <material>Gazebo/Grey</material>
</gazebo>

<gazebo reference="lidar_link">
  <material>Gazebo/Blue</material>
</gazebo>


<gazebo>
  <plugin name="gazebo_ros2_control" filename="libgazebo_ros2_control.so">
    <parameters>$(find main_logic_controller)/config/my_controllers.yaml</parameters>
   </plugin>
</gazebo>
</robot>




        <joint name="laser_joint" type="fixed">
        <parent link="chassis"/>
        <child link="laser_frame"/>
        <origin xyz="0.122 0 0.212" rpy="0 0 0"/>
    </joint>

    <link name="laser_frame">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>
            <material name="black"/>
        </visual>
        <visual>
            <origin xyz="0 0 -0.05"/>
            <geometry>
                <cylinder radius="0.01" length="0.1"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.05">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>


    
    <gazebo reference="laser_frame">
        <material>Gazebo/Black</material>

        <sensor name="laser" type="ray">
            <pose> 0 0 0 0 0 0 </pose>
            <visualize>true</visualize>
            <update_rate>10</update_rate>
            <ray>
                <scan>
                    <horizontal>
                        <samples>360</samples>
                        <min_angle>-3.14</min_angle>
                        <max_angle>3.14</max_angle>
                    </horizontal>
                </scan>
                <range>
                    <min>0.3</min>
                    <max>12</max>
                </range>
            </ray>
            <plugin name="laser_controller" filename="libgazebo_ros_ray_sensor.so">
                <ros>
                    <argument>~/out:=scan</argument>
                </ros>
                <output_type>sensor_msgs/LaserScan</output_type>
                <frame_name>laser_frame</frame_name>
            </plugin>
        </sensor>
    </gazebo>
  